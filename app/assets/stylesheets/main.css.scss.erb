		label { width: 25%; }
		select { width: 75%; }
		.date { width: 75%; }
	}
}

#error_explanation {
	h2 { font-size: 16px; background: red; color: white; padding: 10px; font-weight: bold; text-align: center; }
	ul { margin-top: 10px; }
	li { color: red; margin: 0 0 10px; }
}

footer { overflow: hidden; padding: 20px 0;
	small { float: right; color: $clr_gray_xlt; }
}

/* --- Devise pages --- */
.devise {
	input { width: 100%; margin-bottom: 10px; }
	.message { text-align: center; }
}

.acct-link { position: absolute; top: 18px; right: 42px;
	.acct-icon img { height: 30px; width: 30px; border-radius: 36px; cursor: pointer; }
}

.profile-nav { z-index: 3; position: absolute; top: 66px; right: 0; display: none; width: 180px; padding: 10px 0; background-color: $clr_gray_reg;
	li { position: relative; }
	.fa { position: absolute; top: 10px; left: 20px; color: $clr_gray_xxl;
		transition: color .25s;
	}
	li:hover .fa { color: $clr_white; }
	li a { display: block; padding: 10px 20px 10px 60px; font-size: 11px; font-weight: 700; letter-spacing: .1em; text-transform: uppercase; color: $clr_gray_xxl; }
	li a:hover { color: $clr_white; }
}

/* Gantt Chart */
.gantt_task_line { background: $clr_gray_med !important; border-color: $clr_gray_med !important; border-radius: 0 !important; }
.gantt_task_row.gantt_selected .gantt_task_cell { background: $clr_gray_xxl !important; }
.gantt_grid_data .gantt_row:hover,
.gantt_grid_data .gantt_row.odd:hover { background-color: $clr_gray_xxl !important; }
.gantt_grid_data .gantt_row.gantt_selected,
.gantt_grid_data .gantt_row.odd.gantt_selected { background: $clr_gray_xxl !important; }
.gantt_tree_icon { display: none !important; }
.gantt_task_row.gantt_selected .gantt_task_cell { border-right-color: $clr_gray_xxl !important; }
.gantt_task_line.gantt_selected { box-shadow: none !important; }

/* Positron test */
.positron {
	.mce-panel { display: none; }
	.url { width: 100%; margin-bottom: 20px; }
	textarea { display: block!important; width: 100%; }
}


@media (min-width: 768px) {
	table .no-mob { display: table-cell; }
	header .search { display: block; }
	.sidebar-nav .search { display: none; }
	.profile-card { min-height: 154px;
		.img-holder { position: absolute; top: 0; left: 0; height: 144px; width: 144px; }
		.profile-card-copy { margin-left: 164px;
			h3 { font-size: 28px; line-height: 33.6px; }
