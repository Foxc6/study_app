label.required:after {
  content: " *"; color: #000;
}


.input-group.date { position: relative; display: inline-block; width: 65%;
	.date-picker, .project-date-picker, .invoice-date-picker, .received-date-picker { width: 100%; box-shadow: none; }
	.date-picker:focus, .project-date-picker:focus { box-shadow: none; }
	.input-group-addon { position: absolute; top: 1px; right: 1px; height: 26px; width: auto; padding: 4px 10px; }
