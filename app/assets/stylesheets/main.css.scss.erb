/*

Font Families:

font-family:'Copperplate Gothic LT W01_32AB';
font-family:'Adobe Caslon W01 It';
font-family:'TypewriterEliteW01-Regu';
font-family:'AdobeCaslonW01-Regular';
font-family:'ITCFranklinGothicW01-Dm_812683';

*/

$clr_white: #FFF;
$clr_white_xlt: #F1F1F1;
$clr_gray_inputs: #cccccc;
$clr_gray_xlt: #aaa;
$clr_gray_xxl: #e6e6e6;
$clr_gray_ebd: #333;
$clr_gray_bld: #444;
$clr_gray_sbd: #555;
$clr_gray_med: #666;
$clr_gray_reg: #777;
$clr_gray: #777;
$clr_gray_lgt: #999;
$clr_black: #000;
$clr_red: #c72026;
$clr_green: #25a850;

.clear:after { content: ""; display: table; margin-bottom: 20px; clear: both; }

.full-bg { /*background-color: hotpink;*/ }
.has-limit { max-width: 1200px; width: 100%; margin: 0 auto;
	.has-limit { padding: 0; }
}
.extended14 { max-width: 1214px; }
.extended30 { max-width: 1230px; }

.grid-list:after { content: ""; display: table; clear: both; }

.layout {
	.grid-list { display: none; }
	.table-holder { display: block; }
}
.layout.grid {
	.grid-list { display: block; }
	.table-holder { display: none; }
}

ul, ol { padding-left: 0; list-style: none; }
.wysiwyg {
	a { word-break: break-word; }
	ul { padding-left: 40px; list-style: outside disc;
		ul { list-style: outside circle; }
	}
	ol { padding-left: 40px; list-style: outside none decimal; }
	h4 { margin-bottom: 10px; font-weight: bold; }

}
h1,h2,h3,h4,h5 { margin: 0; font-weight: 400; }
a { color: $clr_gray_lgt;
	transition: color .25s;
}
a:hover, a:focus { color: $clr_black; text-decoration: none; }
img { max-width: 100%; }

p.not-found { margin: 20px 0; text-align: center; color: $clr_gray_lgt; }
p.notice,
p.alert { display: none; }

span.red, span.red a, span.red a:hover { color: $clr_red};
span.green, span.green a, span.green a:hover { color: $clr_green};

.social i:before { font-size: 24px; }

input { height: 28px; padding: 0 10px; border: 1px solid $clr_gray_inputs;
	transition: border-color .25s;
	-webkit-appearance: none;
	-moz-appearance: none;
	appearance: none;
}
input:focus { outline: none; border-color: $clr_green; }
input[type="submit"], button { vertical-align: top; font-size: 11px; letter-spacing: .05em; text-transform: uppercase; color: $clr_white; background-color: $clr_gray_bld; border: none;
	transition: background-color .25s;
}
input[type="submit"]:hover, button:hover { background-color: $clr_black; }

button { padding: 4px 10px 9px; color: $clr_white; }

input[type="checkbox"] { width: auto;
	-webkit-appearance: checkbox;
	-moz-appearance: checkbox;
	appearance: checkbox;
}
.checkbox { margin-top: 0;
	input[type="checkbox"] { top: 4px; height: auto; width: auto; margin: 0; }
}

.image-preview { cursor: pointer; }

select {
  -webkit-appearance: none;
  border-radius: 0px;
}
select { height: 28px; border: 1px solid $clr_gray_inputs; background: none; border-radius: 0;
	transition: border-color .25s;
}
select:focus, select:active { outline: none; box-shadow: none; border-color: $clr_green; }

a:focus { outline: none; }
::-moz-focus-inner { border: 0; outline: none; }

p.empty { padding: 14px 15px 13px; text-align: center; color: $clr_gray_xlt; }

.form-group { margin-bottom: 50px; }
td { color: #999; }

.chosen-container {  }
.chosen-container .chosen-single, .chosen-container-active.chosen-with-drop .chosen-single { height: 28px; border: 1px solid $clr_gray_inputs; border-radius: 0; box-shadow: none; background: none; }
.chosen-container .chosen-drop { border-color: $clr_gray_inputs; }
.chosen-container-single .chosen-single span { padding-top: 1px; }
.chosen-container-single .chosen-single abbr { top: 8px; }
.chosen-container-single .chosen-single div { top: 2px; }
.chosen-results { width: 100%; padding: 0;}
.chosen-container .chosen-results { padding: 0; }
.chosen-container .chosen-results li.highlighted { background: $clr_gray !important; }


header { position: relative;
	.navbar-right { display: none; }
	.search { position: absolute; top: 20px; right: 74px; display: none; width: 20px; margin-right: 14px;
		transition: width .25s;
		input { opacity: 0; position: absolute; top: 0; right: 0; height: 28px; width: 100%; padding: 2px 0px; font-size: 12px; font-weight: 300; color: #000; border: 1px solid transparent;
			transition: opacity 0s ease .2s;
		}
		.magnify { z-index: 2; position: absolute; top: 5px; left: 0; height: 17px; width: 17px; cursor: pointer;
			img { display: block; }
		}
		.close { opacity: .9999; position: absolute; top: 0; right: 0; height: 28px; width: 28px; cursor: pointer;
			.line { position: absolute; opacity: 0; top: 13px; left: 4px; height: 2px; width: 20px; border-radius: 2px; background-color: #fff;
				transition: background-color .01s ease-in-out .2s, opacity .2s ease-in-out .1s, transform .25s;
				box-sizing: border-box;
			}
		}
	}
}
.search-active {
	header {
		.search { width: 200px;
			input { opacity: .9999; padding: 2px 30px 2px 37px; font-size: 12px; border: none;
				transition: opacity 0s ease 0s;
			}
			.close {
				.line { opacity: .9999; background-color: $clr_gray_ebd;
					transition: background-color .01s, transform .25s ease-in-out .05s;
				}
				.two { transform: rotate(45deg); }
				.three { transform: rotate(-45deg); }
			}
		}
	}
	.sidebar-nav { opacity: .25; }
}

.navbar { min-height: 66px; box-shadow: none; }
.navbar-brand { padding: 15px 0; }
.navbar-brand img { display: inline-block; height: 30px; margin-top: 3px; }
.navbar-nav > li > a { padding-top: 24px; }
.navbar-default { background-color: #fff; background-image: none; border: none; }
.nav-toggle { z-index: 2; cursor: pointer; position: absolute; top: 26px; right: 0; height: 14px; width: 25px;
	.line { position: absolute; opacity: .9999; left: 0; height: 2px; width: 25px; border-radius: 2px; background-color: #000;
		transition: opacity .25s;
		box-sizing: border-box;
	}
	.one { position: absolute; top: 0; }
	.two,
	.three { top: 6px;
		transition: transform .25s;
	}
	.four { bottom: 0; }
}

.nav-active {
	.nav-toggle {
		.one, .four { opacity: 0; }
		.two { transform: rotate(45deg); }
		.three { transform: rotate(-45deg); }
	}
}

.sidebar-nav { overflow: hidden; height: 0px;
	transition: height .25s;
	.acct-links { text-align: center;
		a { display: inline-block; margin-bottom: 10px; }
	}
	ul { text-align: center; margin-bottom: 30px; border-top: 1px solid $clr_gray_xlt; border-bottom: 1px solid $clr_gray_xxl;
		li { border-top: 1px solid $clr_gray_xxl; }
		li:first-child { border-top: none; }
		a { display: block; padding: 8px; font-size: 12px; letter-spacing: .05em; text-transform: uppercase; color: $clr_gray_reg; background-color: #fff;
			transition: color .25s, background-color .25s;
		}
		a:hover { color: $clr_black }
	}
	ul.admin {
		.current a, a:hover { background-color: #000; }
	}
}
.sidebar-nav.open { height: 455px; }


.sidebar-nav { opacity: .9999; padding-top: 1px;
	transition: opacity .25s;
	ul { border-top: none;
		a { font-size: 11px; font-weight: 700; letter-spacing: .1em; color: $clr_gray_xlt; }
		a:hover { color: $clr_gray_ebd; }
		.current a { color: $clr_black; }
	}
	.search { position: relative;
		input { height: 33px; width: 100%; padding: 0 10px 0 40px; }
		.magnify { z-index: 2; position: absolute; top: 5px; left: 10px; height: 17px; width: 17px; }
	}
}
.sidebar-nav.open { height: 260px; }

.bar-header { position: relative; margin-bottom: 30px; text-align: left; color: $clr_gray_ebd;
	h2 { display: inline-block; margin-left: -1px; padding-right: 20px; font-size: 36px; font-weight: 200; line-height: 1.2; text-align: left; color: $clr_black; }
	h4 { font-size: 14px; text-transform: capitalize; font-weight: bold; }
	a { float: right; margin-top: 18px; font-size: 11px; font-weight: 700; letter-spacing: .1em; text-transform: uppercase; color: $clr_gray_ebd; }
	a:hover { color: $clr_green; }
}
.bar-header:after {	content: ""; display: table; clear: both; }

.utility-bar { clear: both; overflow: hidden; padding: 0 0 10px; text-align: center;
	ul { display: inline-block; margin-bottom: 0; vertical-align: bottom; }
	li { float: left; margin: 0 2px 0 8px; }
	.main-filter {
		li { margin: 0 0 0 30px; font-size: 11px; font-weight: 700; letter-spacing: .1em; text-transform: uppercase; color: $clr_gray_xlt; }
		li:first-child { margin-left: 0; }
		li:hover a { color: $clr_gray_ebd; }
		.current a, .current:hover a { color: $clr_black; }
	}
	.utility { margin-bottom: 20px;
		li { font-size: 11px; font-weight: 700; text-transform: uppercase; color: $clr_gray_xlt; }
		.view { position: relative; top: -2px; font-size: 14px; font-weight: 400; text-transform: none; cursor: pointer; color: $clr_gray_xlt;
			transition: color .25s;
		}
		.view:hover { color: $clr_gray_ebd; }
		.view.current,
		.view.current:hover { color: $clr_black; }
	}
}
.table-holder { position: relative; overflow: hidden; padding: 0 7px; }
.table-holder:after { content: ""; position: absolute; top: 0; left: 0; height: 46px; width: 100%; background-color: $clr_white_xlt; }
table { position: relative; z-index: 2; font-size: 12px; color: $clr_gray_med;
	.no-mob { display: none; }
	.pretty {
		th { padding: 15px 8px; border-bottom: none; }
	}
	th { font-size: 11px; letter-spacing: .05em; text-transform: uppercase; border-bottom: none; }
	.override td { border-top: none; border-bottom: 1px solid $clr_white_xlt; }
	.avatar {
		.holder { max-width: 360px; width: 100%; }
		> a { float: left; }
		.name-title-txt { float: left; }
		.name a { font-size: 14px; font-weight: 500; color: $clr_black; }
		.title a { font-size: 13px; }
	}
	th.avatar a { position: relative; left: -1px; }
	td.avatar {
		.holder { position: relative; display: table-cell; height: 60px; padding-left: 75px; vertical-align: middle; }
		.holder > a { position: absolute; top: 0; left: 0; }
		img { width: 100%; max-width: 60px; margin-right: 10px; }
	}
	td.company a { display: block;
		img { max-width: 36px; }
	}
	td.state i:before { font-size: 24px; }
	td.actions { width: 60px; text-align: right;
		a { margin-left: 5px; }
	}
	th.centered, td.centered { text-align: center; }
}

/* --- table sorting --- */
table th {
	a.current { color: $clr_black; }
	a.asc:after { content: ""; position: relative; top: -2px; display: inline-block; height: 0; width: 0; margin-left: 5px; border-top: 5px solid $clr_black; border-right: 5px solid transparent; border-left: 5px solid transparent; }
	a.desc:after { content: ""; position: relative; top: -2px; display: inline-block; height: 0; width: 0; margin-left: 5px; border-bottom: 5px solid $clr_black; border-right: 5px solid transparent; border-left: 5px solid transparent; }
}

table > thead > tr > th, table > tbody > tr > th, table > tfoot > tr > th, table > thead > tr > td, table > tbody > tr > td, table > tfoot > tr > td { vertical-align: middle; }

.grid-list { margin-bottom: 20px; background-color: $clr_white_xlt;
	> ul { padding: 15px 0; text-align: center; }
	> ul:after { content: ""; display: table; clear: both; }
	> ul > li { display: inline-block; vertical-align: top; min-width: 288px; max-width: 410px; width: 100%; text-align: left; border: 15px solid transparent; }
	.list-card { overflow: hidden; display: table; width: 100%; background-color: $clr_white;
		.avatar { display: table-cell; vertical-align: top; width: 45%; text-align: center; position: relative;
			> a { position: relative; top: 0; left: 0; z-index: 1; }
			.company_name { position: absolute; bottom: 0; right: 0; max-width: 30px; z-index: 2; margin-bottom: 0;
				a { width: 30px; height: 30px; display: block; }
			}
		}
		.contents { position: relative; display: table-cell; width: 55%; padding: 10px 10px 50px 10px;
			a { display: inline-block; }
		}
		.name, .title { display: inline-block; }
		.name a { font-size: 14px; font-weight: 600; line-height: 16.8px; color: $clr_gray_bld; }
		.title a { margin-bottom: 15px; font-size: 12px; font-weight: 300; line-height: 14.4px; color: $clr_gray_reg; }
		.name-title-txt p { margin-bottom: 0; font-size: 11px; line-height: 13.2px; color: $clr_gray_reg; }
		.what-where-when { overflow: hidden; }
		.list-card-foot { overflow: hidden; position: absolute; bottom: 10px; left: 0; width: 100%; padding: 0 10px;
			.actions { float: right;
				a { margin-left: 5px; }
			}
		}
	}
}

.link-block { float: right;
	li { float: left; margin-left: 20px; }
	a { text-transform: uppercase; }
}

.social-block {
	ul { overflow: hidden; }
	li { min-height: 100px; padding: 0; }
	li a { display: table; width: 100%; }
	li i { display: table-cell; width: 40px; }
	i:before { font-size: 40px; }
	.soc-info { display: table-cell; vertical-align: top; width: 100%; padding: 0 10px; }
}
td.social { text-align: right;
	a { display: inline-block; padding: 4px; }
	i:before { font-size: 18px; }
}

.hidden-form {
	form { display: none; }
	form label { font-weight: 400; color: #999; }
	.contact { display: none; }
	.create { cursor: pointer; }
	td { transition: color .25s; }
	tr:hover td,
	tr.open td,
	tr.description td { color: #000; }
	tr.description-toggle { cursor: pointer; }
	tr.description:hover > td { background-color: transparent; }
	tr.description td { border-top: none; }
}

.form-active {
	form { display: block; }
	.link-block { display: none; }
}

.pagination-block { text-align: center; }
.pagination { display: inline-block; margin: 0 auto; padding: 0; line-height: 1.2; border-radius: 0px;
	span, em, a { float: left; min-width: 37px; padding: 10px; text-align: center; color: $clr_gray_xlt; }
	.disabled { color: $clr_gray_xlt; }
	.previous_page { border-left: none; }
	.previous_page, .next_page { width: auto; }
	em { position: relative; top: 1px; font-style: normal; font-weight: 500; color: $clr_black; }
	a:hover { color: $clr_black; }
}

.profile-card { position: relative; margin-bottom: 20px;
	.img-holder { position: absolute; top: 0; left: 0; height: 60px; width: 60px; }
	.profile-card-copy { margin-left: 70px;
		h3 { position: relative; padding-right: 30px; font-size: 18px; font-weight: 500; line-height: 33.6px; }
		.title { margin-bottom: 10px; font-size: 14px; font-weight: 300; line-height: 17.6px; }
		p { margin-bottom: 5px; color: $clr_gray; }
		.what-where-when { overflow: hidden; margin-bottom: 5px;
			li { position: relative; float: left; margin: 0 10px; }
			li:before { content: ""; position: absolute; top: 2px; left: -10px; height: 9px; width: 1px; background-color: $clr_gray_xlt; }
			li:first-child { margin-left: 0; }
			li:first-child:before { content: none; }
			li:last-child { margin-right: 0; }
			p { font-size: 11px; line-height: 13.2px; }
		}
		.company_name { margin-bottom: 10px;
			> a { margin-right: 10px; }
			a { display: inline-block; }
			img { max-width: 30px; }
		}
	}
	.edit-form { display: none; }
}
.profile-card:after { content: ""; display: table; clear: both; }
.profile-card.edit-active {
	.card { display: none; }
	.edit-form { display: block; }
}

.edit-toggle { position: absolute; top: 2px; right: 0; height: 22px; width: 22px; text-align: center; cursor: pointer; color: $clr_gray_reg; }
.edit-toggle:before { position: absolute; top: 0; right: 0; bottom: 0; left: 0; height: 18px; width: 18px; margin: auto; font-size: 18px; }

.edit-form { padding-top: 35px;
	.close { opacity: .9999; position: absolute; top: 0; right: 0; height: 28px; width: 28px; cursor: pointer;
		.line { position: absolute; opacity: 0; top: 13px; left: 4px; height: 2px; width: 20px; border-radius: 2px; background-color: #fff;
			transition: background-color .01s ease-in-out .2s, opacity .2s ease-in-out .1s, transform .25s;
		}
	}
}
.edit-active .edit-form {
	.close {
		.line { opacity: .9999; background-color: $clr_gray_ebd;
			transition: background-color .01s, transform .25s ease-in-out .05s;
		}
		.two { transform: rotate(45deg); }
		.three { transform: rotate(-45deg); }
	}
}

.info-block { margin-bottom: 50px;
	table {
		th, td { padding: 8px 15px; }
		th { border-bottom: none; }
		.avatar > a { float: none; display: inline-block; }
		.actions { width: 100px; }
		.actions a { top: 8px; }
	}
}

.info-block-head { position: relative; margin-bottom: 10px; padding-right: 30px; border-bottom: 1px solid $clr_gray_ebd;
	ul { overflow: hidden; }
	li { float: left; margin-left: 10px; cursor: pointer; }
	li:first-child { margin-left: 0; }
	li a { padding: 8px 15px; font-size: 11px; font-weight: 700; letter-spacing: .1em; text-transform: uppercase; color: $clr_gray_xlt; }
	li a:hover,
	li.current a { color: $clr_black; }
	.close { display: none; opacity: .9999; position: absolute; top: 0; right: 0; height: 28px; width: 28px; cursor: pointer;
		.line { position: absolute; opacity: 0; top: 13px; left: 4px; height: 2px; width: 20px; border-radius: 2px; background-color: #fff;
			transition: background-color .01s ease-in-out .2s, opacity .2s ease-in-out .1s, transform .25s;
		}
	}
}

.info-block-content {
	> ul > li { display: none; }
	> ul > li.current { display: block; }
	.has-border { border-bottom: 1px solid $clr_gray_xxl; }
	.split li { overflow: hidden; padding: 15px 0 5px; border-bottom: 1px solid $clr_gray_xxl;
		h4 { float: left; width: 38%; margin-bottom: 10px; padding: 0 15px; font-size: 9px; font-weight: 600; letter-spacing: .07em; line-height: 1.4; text-transform: uppercase; color: $clr_gray_bld; }
		.value { clear: right; float: right; width: 62%; padding-right: 15px;
			img { max-width: 30px; }
		}
		p { margin-top: -4px; color: $clr_gray; }
	}
	.split ul { padding-left: 0; list-style: inside disc;
		li { padding-top: 5px; border: none; }
		ul { padding-left: 20px; list-style: inside circle; }
	}
	.full li { overflow: hidden; border-bottom: 1px solid $clr_gray_xxl; }
	.split li.no-border,
	.full li.no-border { border: none; }
	.social-item {
		a { overflow: hidden; display: block; padding: 15px 0; }
		i { float: left; display: table; height: 30px; width: 30px; margin: 0 10px 0 15px; font-size: 20px; text-align: center; border-radius: 5px; background-color: $clr_gray_ebd; color: $clr_white; }
		i:before { display: table-cell; vertical-align: middle; }
		.soc-info { overflow: hidden; margin-top: 6px; font-size: 12px;
			.count { float: right; margin-right: 15px; }
			strong { color: $clr_gray_ebd; }
		}
	}
	.skills, .tags { display: inline-block; width: 100%; padding: 5px 15px 20px;
		li { float: left; width: 33.3333%; padding: 10px 0; font-size: 12px; color: $clr_gray; }
	}
	.add-a-tag { margin-top: 20px; }
	.value {
		a,
		p span { word-break: break-word; }
	}
	table {
		td { border-top: none; border-bottom: 1px solid $clr_gray_xxl; }
		td, a { color: $clr_gray; }
		td.avatar img { max-width: 30px; }
	}
	.edit-form { display: none; }
}
#tags_chosen { width: auto!important; }
.info-block.edit-active .info-block-content {
	li.current ul.split { display: none; }
	li.current .edit-form { display: block; }
}

.info-block.edit-active .info-block-head {
	.edit-toggle { display: none; }
	.close { display: block;
		.line { opacity: .9999; background-color: $clr_gray_ebd;
			transition: background-color .01s, transform .25s ease-in-out .05s;
		}
		.two { transform: rotate(45deg); }
		.three { transform: rotate(-45deg); }
	}
}

.estimate-form {
	input { margin-bottom: 10px; }
}

/* --- Contact edit --- */
body.edit {
	.bar-header h2 { text-transform: capitalize; }
	form .actions { margin-bottom: 50px; }
}

.edit-pro-info { display: table; width: 100%;
	.edit-pro-img { display: table-cell; width: 70px;
		img { width: 100%; }
	}
	.form-control { display: none; }
	.img-upload-btn { cursor: pointer; }
	.edit-pro-contact { display: table-cell; vertical-align: top; padding-left: 10px;
		fieldset { margin-bottom: 10px; }
		.chosen-container { width: 65% !important; float: right; }
		label { clear: left; float: left; width: 35%; padding-top: 7px; font-size: 9px; font-weight: 600; letter-spacing: .07em; line-height: 1.4; text-transform: uppercase; color: $clr_gray_bld; }
		input, select { float: right; width: 65%; }
		.form-group label { float: none; }
	}
	.chosen-container-single { width: auto!important; }
}

.edit-group {
	.fields { position: relative; margin-bottom: 15px;
		input { float: right; width: 49.4%; margin-bottom: 5px; }
		.odd { clear: left; float: left; }
		select { float: right; width: 49.4%; margin-bottom: 5px; }
